---
layout: compress
permalink: /ruinas.geojson
---
{
  "type": "FeatureCollection",
  "features": [
      {% for ruina in site.data.ruinas%}
      {% if ruina.type ==  ca %}

      {% assign color = "#ffffff" %}

      {% endif %}

      {% if ruina.type ==  cb %}

      {% assign color = "#c90000" %}

      {% endif %}

      {% if ruina.type ==  cc %}

      {% assign color = "#fff400" %}

      {% endif %}

      {% if ruina.type ==  ci %}

      {% assign color = "#0004ff" %}

      {% endif %}


      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [{{ ruina.long }}, {{ruina.lat}}]
        },
        "properties": {
          "title": "{{ ruina.name }}",
          "description": "{{ ruina.description }}",
          "marker-color": "{{ color }}",
        }

      } {% if forloop.last %}{% else %},{% endif %}
  {% endfor %}



  ]
}
