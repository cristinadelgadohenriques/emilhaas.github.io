{
  "type": "FeatureCollection",
  "features": [
      {% assign color = "#333333" %}

      {% if ruina.type ==  "ca" %}

      {% assign color = "#ffffff" %}

      {% endif %}

      {% if ruina.type ==  "cb" %}

      {% assign color = "#c90000" %}

      {% endif %}

      {% if ruina.type ==  "cc" %}

      {% assign color = "#fff400" %}

      {% endif %}

      {% if ruina.type ==  "ci" %}

      {% assign color = "#0004ff" %}

      {% endif %}


      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [{{ ruinas.long }}, {{ruinas.lat}}]
        },
        "properties": {
          "title": "{{ ruinas.name }}",
          "description": "{{ ruinas.desc1 }}",
          "marker-color": "{{ color }}"
        }

      }



  ]
}
